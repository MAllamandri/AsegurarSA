@model IEnumerable<AsegurarSA.Domain.Entities.Turno>

@{
    ViewBag.Title = "Obtener Turnos";
}

<h2>ObtenerTurnos</h2>
<div class="row">
    <div class="col-xs-12">

        <div class="widget-box">
            <div class="widget-title">
                <span class="icon">
                    <i class="glyphicon glyphicon-th"></i>
                </span>
                <h5>Lista de Turnos</h5>
            </div>
            <div class="widget-content nopadding">
                <table class="table table-striped table-hover text-left">
                    <thead>
                        <tr class="t-left">
                            <th>Empleado</th>
                            <th>Tipo Turno</th>
                            <th>Feanco</th>
                            <th>Fecha</th>
                            <th style="width: 6px;"></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model)
                        {
                            <tr>
                                <td>@e.EmpleadoId</td>
                                <td>@e.TipoTurno</td>
                                <td>@e.Franco</td>
                                <td>@e.FechaDia.ToShortDateString()</td>
                               @* <td><a href= "@Url.Action("Modificar", "Empleados", new { EmpleadoId = @e.EmpleadoId })"><i class="glyphicon glyphicon-edit" /></a></td>
                                <td><a href="@Url.Action("Delete", "Empleados", new { EmpleadoId = @e.EmpleadoId })"><i class="glyphicon glyphicon-remove" /></a></td>*@

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>