@model IEnumerable<AsegurarSA.Domain.Entities.Turno>

@{
    ViewBag.Title = "Obtener Turnos";
}

<h2>Obtener Turnos</h2>
<div class="row">
    <div class="col-xs-12">

        <div class="widget-box">
            <div class="widget-title">
                <span class="icon">
                    <i class="glyphicon glyphicon-th"></i>
                </span>
            </div>
            <div class="widget-content nopadding">
                <table class="table table-striped table-hover text-left">
                    <thead>
                        <tr class="t-left">
                            <th>Empleado</th>
                            <th>Tipo Turno</th>
                            <th>Feanco</th>
                            <th>Fecha</th>
                            <th style="width: 6px;"></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model)
                        {
                            <tr>
                                <td>@e.Empleado.Apellido, @e.Empleado.Nombre</td>
                                <td>@e.TipoTurno</td>
                                <td>@e.Franco</td>
                                <td>@e.FechaDia.ToShortDateString()</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        $('#sidebar .active').removeClass('active');
        $('#sidebar #turnos').addClass('active open');
        $('#sidebar #turnos #obtenerturno').addClass('active');

        $('.datepicker').datepicker();
    });
</script>
