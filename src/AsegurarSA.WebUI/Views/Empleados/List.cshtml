@model IEnumerable<AsegurarSA.Domain.Entities.Empleado>

@{
    ViewBag.Title = "Empleados";
}


<div class="row">
    <div class="col-xs-12">

        <div class="widget-box">
            <div class="widget-title">
                <span class="icon">
                    <i class="glyphicon glyphicon-th"></i>
                </span>
                <h5>Lista de empleados</h5>
            </div>
            <div class="widget-content nopadding">
                <table class="table table-striped table-hover text-left">
                    <thead>
                        <tr class="t-left">
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Telefono</th>
                            <th>Fecha de nacimiento</th>
                            <th style="width: 6px;"></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model)
                        {
                            <tr>
                                <td>@e.Nombre</td>
                                <td>@e.Apellido</td>
                                <td>@e.Telefono</td>
                                <td>@e.FechaNacimiento</td>
                                <td><a href= "@Url.Action("Modificar", "Empleados", new { EmpleadoId = @e.EmpleadoId })"><i class="glyphicon glyphicon-edit" /></a></td>
                                <td><a href="@Url.Action("Delete", "Empleados", new { EmpleadoId = @e.EmpleadoId })"><i class="glyphicon glyphicon-remove" /></a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-xs-12">
        <div class="">
            <a href="/Empleados/Create"><i class="" /><i class="glyphicon glyphicon-plus"></i>Agregar empleado</a>
        </div>
    </div>
</div>


<script>
    $(document).ready(function() {
        $('#sidebar .active').removeClass('active');
        $('#sidebar #empleado').addClass('active open');
        $('#sidebar #empleado #list').addClass('active');
    });

</script>
