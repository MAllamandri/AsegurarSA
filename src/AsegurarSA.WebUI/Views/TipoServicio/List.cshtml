@model IEnumerable<AsegurarSA.Domain.Entities.TipoServicio>

@{
    ViewBag.Title = "Lista de Servicios";
}


<body>

<div class="row">
    <div class="col-xs-12">

        <div class="widget-box">
            <div class="widget-title">
                <span class="icon">
                    <i class="glyphicon glyphicon-th"></i>
                </span>
                <h5>Lista de Servicios</h5>
            </div>
            <div class="widget-content nopadding">
                <table class="table table-striped table-hover text-left">
                    <thead>
                        <tr class="t-left">
                            <th>Nombre</th>
                            <th>Descripcion</th>
                            <th>Costo</th>
                            <th style="width: 6px;"></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model)
                        {
                            <tr>
                                <td>@t.Nombre</td>
                                <td>@t.Descripcion</td>
                                <td>@t.Costo</td>
                                <td><a href= "@Url.Action("Modificar", "TipoServicio", new { TipoServicioId = @t.TipoId })"><i class="glyphicon glyphicon-edit" /></a></td>
                                <td><a href="@Url.Action("Delete", "TipoServicio", new { TipoServicioId = @t.TipoId })"><i class="glyphicon glyphicon-remove" /></a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
