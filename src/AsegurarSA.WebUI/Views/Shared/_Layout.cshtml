<!DOCTYPE html>
<html lang="en">
	<head>
		<title>AsegurarSA Admin - @ViewBag.Title</title>
		<meta charset="UTF-8" />
	    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        @Styles.Render("~/Content/bootstrap/bootstrap.css")
         <link rel="stylesheet" href="~/Content/themes/AsegurarSA/css/datepicker.css">
        <link rel="stylesheet" href="~/Content/themes/AsegurarSA/css/font-awesome.css">
	    <link rel="stylesheet" href="~/Content/themes/AsegurarSA/css/fullcalendar.css" />	
        <link rel="stylesheet" href="~/Content/themes/AsegurarSA/css/unicorn.css" />
	    @Html.Color(WebSecurity.CurrentUserId)
        @Styles.Render("~/Content/themes/AsegurarSA/css/AsegurarSA.css")
	    <script src="~/Scripts/jquery.min.js"></script>
        <script src="~/Scripts/unicorn.js"></script>
	</head>
    <body>
        <div id="header">
            <h1><a href="./dashboard.html">AsegurarSA Admin</a></h1>	
            <a id="menu-trigger" href="#"><i class="glyphicon glyphicon-align-justify"></i></a>	
        </div>

        <div id="user-nav">
            <ul class="btn-group">
                <li class="btn" ><a title="" href="#"><i class="glyphicon glyphicon-user"></i> <span class="text"> @User.Identity.Name</span></a></li>
                <li class="btn"><a title="" href="/account/logout"><i class="glyphicon glyphicon-share-alt"></i> <span class="text">Logout</span></a></li>
            </ul>
        </div>
            
        <div id="sidebar">
            <ul>
                <li class="submenu" id="empleado">
                    <a href="/Empleados"><i class="glyphicon glyphicon-inbox"></i> <span>Empleados</span> <i class="arrow glyphicon glyphicon-chevron-right"></i></a>
                    <ul>
                        <li id="list"><a href="/Empleados/">Lista de empleados</a></li>
                        <li id="create"><a href="/Empleados/CrearEmpleado">Crear nuevo</a></li>
                    </ul>
                </li>
                @*<li id="empleado"><a href="buttons.html"><i class="glyphicon glyphicon-inbox"></i> <span>Empleados</span></a></li>*@
                <li class="submenu" id="cliente">
                    <a href="/Cliente/list"><i class="glyphicon glyphicon-user"></i> <span>Clientes</span> <i class="arrow glyphicon glyphicon-chevron-right"></i></a>
                    <ul>
                        <li id="list"><a href="/Cliente/">Lista de clientes</a></li>
                        <li id="create"><a href="/Cliente/Create">Crear nuevo</a></li>
                    </ul>
                </li>

                <li class="submenu" id="tiposervicio">
                    <a href="/TipoServicio/list"><i class="glyphicon glyphicon-inbox"></i> <span>Tipos de servicio</span><i class="arrow glyphicon glyphicon-chevron-right"></i></a>
                    <ul>
                        <li id="listService"><a href="/TipoServicio/list">Lista de servicios</a></li>
                        <li id="createService"><a href="/TipoServicio/Create">Crear nuevo</a></li>
                    </ul>
                </li>
                <li class="submenu" id="turnos">
                    <a href="/Turno/"><i class="glyphicon glyphicon-inbox"></i> <span>Turnos</span><i class="arrow glyphicon glyphicon-chevron-right"></i></a>
                    <ul>
                        <li id="generarturnos"><a href="/Turno/Index">Generar Turnos</a></li>
                        <li id="obtenerturno"><a href="/Turno/ObtenerInformeTurnos">Generar Informe</a></li>
                    </ul>
                </li>
                <li class="submenu" id="tareas">
                    <a href="/Tareas/"><i class="glyphicon glyphicon-inbox"></i> <span>Tareas</span><i class="arrow glyphicon glyphicon-chevron-right"></i></a>
                    <ul>
                        <li id="tecnicas"><a href="/Tareas/List">Lista de Tareas</a></li>
                        <li id="tecnicasnueva"><a href="/Tareas/Create">Nueva Tareas</a></li>
                    </ul>
                </li>
                <li class="submenu" id="reportes">
                    <a href="/Reportes/"><i class="glyphicon glyphicon-inbox"></i> <span>Reportes</span><i class="arrow glyphicon glyphicon-chevron-right"></i></a>
                    <ul>
                        <li id="clientes"><a href="/Reportes/ClientesPerdidos">Clientes perdidos</a></li>
                        <li id="clienteservicio"><a href="/Reportes/ClienteServicio">Clientes por servicio</a></li>
                        <li id="empleadoshoras"><a href="/Reportes/EmpleadoHoras">Horas trabajadas por empleado</a></li>
                        <li id="eventos"><a href="/Reportes/Eventos">Eventos ocurridos</a></li>
                    </ul>
                </li>
            </ul>
		
        </div>
		
		<div id="style-switcher">
			<i class="glyphicon glyphicon-arrow-left"></i>
			<span>Style:</span>
		    <a href="#grey" style="background-color: #555555;border-color: #aaaaaa;" onclick="save()"></a>
            <a href="#light-blue" style="background-color: #8399b0;" onclick="save()"></a>
			<a href="#blue" style="background-color: #2D2F57;"  onclick="save()"></a>
			<a href="#red" style="background-color: #673232;" onclick="save()"></a>
            <a href="#red-green" style="background-image: url('/Content/themes/AsegurarSA/img/demo/red-green.png');background-repeat: no-repeat;" onclick="save()"></a>
        </div>
		
		<div id="content">
			<div id="content-header">
				<h1>@ViewBag.Title</h1>
			</div>
			<div id="breadcrumb">
				<a href="#" title="Go to Home" class="tip-bottom"><i class="glyphicon glyphicon-home"></i> Home</a>
				<a href="#" class="current">@ViewBag.Title</a>
			</div>
			@RenderBody()
		</div>
		<div class="row">
			<div id="footer" class="col-12">
				2013 &copy; AsegurarSA
			</div>
		</div>
            <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>  
            <script src="~/Scripts/excanvas.min.js"></script>
            <script src="~/Scripts/jquery-ui.custom.js"></script>
	        <script src="~/Scripts/bootstrap.min.js"></script>
            <script src="~/Scripts/bootstrap-datepicker.js"></script>
            <script src="~/Scripts/jquery.flot.min.js"></script>
            <script src="~/Scripts/jquery.flot.resize.min.js"></script>
            <script src="~/Scripts/jquery.sparkline.min.js"></script>
            <script src="~/Scripts/fullcalendar.min.js"></script>
            <script src="~/Scripts/jquery.jpanelmenu.min.js"></script>
           @* <script src="~/Scripts/unicorn.js"></script>*@
	        <script src="~/Scripts/unicorn.dashboard.js"></script>
	        <script src="~/Scripts/AsegurarSA.js"></script>
            <script> function save() {
            var style = $("#style-switcher a").attr('href').replace("#","");
             debugger;
                 $.ajax(
            {
                type: "POST",
                url: "/Empleados/SetearStyle",
                data: {sty : style},
                dataType: "json",
                success: function (result) {
                    alert("Estilo modificado");
                },
            });
             }
            </script>
    </body>
</html>

