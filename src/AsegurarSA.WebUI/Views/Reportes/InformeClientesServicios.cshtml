@model IEnumerable<AsegurarSA.Domain.Entities.ClienteServicio>

@{
    ViewBag.Title = "Informe de Clientes por Servicios";
}

<div class="row">
    <div class="col-xs-12">
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon">
                    <i class="glyphicon glyphicon-th"></i>
                </span>
            </div>
            <div class="widget-content nopadding">
                <table class="table table-striped table-hover text-left">
                    <thead>
                        <tr class="t-left">
                            <th>Fecha desde</th>
                            <th>Fecha hasta</th>
                            <th>Tipo Servicio</th>
                            <th>Cliente</th>
                            <th style="width: 6px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model)
                        {
                            <tr>
                                <td>@ViewData["FechaI"]</td>
                                <td>@ViewData["FechaF"]</td>
                                <td>@s.Servicio.Nombre</td>
                                <td>@s.Cliente.Apellido, @s.Cliente.Nombre</td>
                            </tr>
                        }
                       
                    </tbody>
                </table>
                   @if (Model.Count() == 0)
                         {
                             <p>No existen clientes para ese servicio en el rango de fechas seleccionado o las fechas son incorrectos.</p>
                         }
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        $('#sidebar .active').removeClass('active');
        $('#sidebar #reportes').addClass('active open');
        $('#sidebar #reportes #clienteservicio').addClass('active');
    });
</script>