@model IEnumerable<AsegurarSA.Domain.Entities.Evento>

@{
    ViewBag.Title = "Eventos ocurridos";
}

<div class="row">
    <div class="col-xs-12">
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon">
                    <i class="glyphicon glyphicon-th"></i>
                </span>
            </div>
            <div class="widget-content nopadding">
                <table class="table table-striped table-hover text-left">
                    <thead>
                        <tr class="t-left">
                            <th>Fecha Evento</th>
                            <th>Hora Evento</th>
                            <th>Apellido, Nombre</th>
                            <th>Descripcionr</th>
                            <th style="width: 6px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model)
                        {
                            <tr>
                                <td>@e.Fecha.ToShortDateString()</td>
                                <td>@e.Fecha.ToShortTimeString()</td>
                                <td>@e.Cliente.Apellido, @e.Cliente.Nombre</td>
                                <td>@e.Descripcion</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        $('#sidebar .active').removeClass('active');
        $('#sidebar #reportes').addClass('active open');
        $('#sidebar #reportes #eventos').addClass('active');
    });
</script>
