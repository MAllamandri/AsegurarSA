@model AsegurarSA.Domain.Entities.Empleado

@{
    ViewBag.Title = "Informe de Horas";
}

<div class="row">
    <div class="col-xs-12">

        <div class="widget-box">
            <div class="widget-title">
                <span class="icon">
                    <i class="glyphicon glyphicon-th"></i>
                </span>
            </div>
            <div class="widget-content nopadding">
                <table class="table table-striped table-hover text-left">
                    <thead>
                        <tr class="t-left">
                            <th>Empleado</th>
                            <th>Horas</th>
                            <th>Fecha Desde</th>
                            <th>Fecha Hasta</th>
                            <th style="width: 6px;"></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Nombre,@Model.Apellido</td>
                            <td>@ViewData["horas"]</td>
                            <td>@ViewData["fechaInicio"]</td>
                            <td>@ViewData["fechaFin"]</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        $('#sidebar .active').removeClass('active');
        $('#sidebar #reportes').addClass('active open');
        $('#sidebar #reportes #empleadoshoras').addClass('active');
    });
</script>